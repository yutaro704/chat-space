.chat-main__messages__group
  .chat-main__messages__group__upper
    .chat-main__messages__group__upper__name
      = message.user.name
    .chat-main__messages__group__upper__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat-main__messages__group__lower
    - if message.content.present?
      .chat-main__messages__group__lower__text
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?