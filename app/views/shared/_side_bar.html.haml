.chat-side
  .chat-side__header
    .chat-side__header__box
      %p.chat-side__header__box__name
        = current_user.name
      %ul.chat-side__header__box__menu
        %li.chat-side__header__box__menu__new-group
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.chat-side__header__box__memu__edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .chat-side__groups
    .chat-side__groups__group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .chat-side__groups__group__name
            = group.name
          .chat-side__groups__group__message
            = group.show_last_message